---
vapps:
  - name: <%= vapp_name %>
    vdc_name: <%= vdc_name %>
    catalog_name: <%= catalog %>
    vapp_template_name: <%= vapp_template %>
    vm:
      hardware_config:
        memory: 8192
        cpu: 4
      metadata:
        is_integer: -999
        is_string: Hello World
        is_datetime: <%= date_metadata %>
        is_true: true
        is_false: false
        integration_test_vm: true
      extra_disks:
      - size: '1024'
        name: Hard disk 2
      - size: '2048'
        name: Hard disk 3
      independent_disks:
      - name: <%= independent_disk_name %>
      network_connections:
      - name: <%= network_1 %>
        ip_address: <%= network_1_ip %>
      - name: <%= network_2 %>
        ip_address: <%= network_2_ip %>
      bootstrap:
        script_path: <%= bootstrap_script %>
        vars:
          message: hello world
      storage_profile: <%= storage_profile %>
